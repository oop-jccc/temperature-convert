{
  "name": ".NET High-Performance Environment",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "septag.visual-assist-dark",
        "jeff-hykin.better-c-sharp-syntax",
        "icsharpcode.ilspy-vscode",
        "patcx.vscode-nuget-gallery",
        "ryanluker.vscode-coverage-gutters",
        "humao.rest-client"
      ]
    }
  },
  "forwardPorts": [5000, 5299, 8080],
  "portsAttributes": {
    "5000": {
      "label": "HTTP (ASP.NET Core)",
      "protocol": "http"
    },
    "5299": {
      "label": "HTTP (Dynamic)",
      "protocol": "http"
    },
    "8080": {
      "label": "HTTP (Container Default)",
      "protocol": "http"
    }
  },
  "postCreateCommand": "dotnet restore dynamic-json.sln && echo 'Container setup complete! Run: dotnet run --launch-profile dynamic_json_codespaces'",
  "remoteUser": "vscode"
}