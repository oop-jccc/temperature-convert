{
  "name": ".NET Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0",
      "installUsingApt": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "jeff-hykin.better-c-sharp-syntax",
        "patcx.vscode-nuget-gallery",
        "ryanluker.vscode-coverage-gutters",
        "humao.rest-client"
      ],
      "settings": {
        "dotnet.server.useOmnisharp": true,
        "omnisharp.enableEditorConfigSupport": true,
        "omnisharp.enableImportCompletion": true,
        "omnisharp.enableRoslynAnalyzers": true,
        "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
        "dotnet.symbolSearch.searchReferenceAssemblies": false,
        "csharp.semanticHighlighting.enabled": true,
        "csharp.format.enable": true,
        "csharp.suppressDotnetInstallWarning": true,
        "dotnet.defaultSolution": "TemperatureConvert/TemperatureConvert.sln",
        "dotnet.preferCSharpExtension": true
      }
    }
  },
  "forwardPorts": [5000, 5001, 7065, 5076],
  "portsAttributes": {
    "5000": { "label": "HTTP", "protocol": "http" },
    "5001": { "label": "HTTPS", "protocol": "https" },
    "7065": { "label": "HTTPS Dev", "protocol": "https" },
    "5076": { "label": "HTTP Dev", "protocol": "http" }
  },
  "postCreateCommand": "dotnet restore \"TemperatureConvert/TemperatureConvert.sln\"",
  "remoteUser": "vscode"
}

